# Maintainer: Mamy Ratsimbazafy <Github mratsim>

pkgname=python-pybind11-git
_pkgname=pybind11
pkgver=v2.2.0.r131.g177713f
pkgrel=1
pkgdesc='Seamless operability between C++11 and Python'
arch=('any')
url='https://github.com/pybind/pybind11'
license=('BSD')
depends=('python') 
makedepends=('git' 'cmake' 'python-setuptools')
conflicts=('python-pybind11')
provides=('python-pybind11')
source=('git://github.com/pybind/pybind11.git')
md5sums=('SKIP' )

pkgver() {
  cd $_pkgname
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


build() {
  cd $_pkgname
  python setup.py build
}

package() {
  cd $_pkgname
  python setup.py install --root=${pkgdir} --optimize=1
}
