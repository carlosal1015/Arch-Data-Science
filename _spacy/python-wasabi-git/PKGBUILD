# Maintainer: Mamy Ratsimbazafy <mamy (dot) ratsimbazafy_pkgbuild [at] gadz (dot) org>

pkgname=python-wasabi-git
_pkgname=wasabi
pkgver=v0.0.15.r0.g4ff962b
pkgrel=1
pkgdesc="A lightweight console printing and formatting toolkit "
arch=('any')
url='https://github.com/ines/wasabi'
license=('MIT')
depends=('python')
makedepends=('git' 'python-setuptools')
conflicts=('python-wasabi')
provides=('python-wasabi')
source=('git://github.com/ines/wasabi.git')
md5sums=('SKIP' )

pkgver() {
  cd $_pkgname
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


build() {
  cd $_pkgname
  export CUDA_HOME=/opt/cuda
  export PATH=$PATH:$CUDA_HOME/bin
  # export CUDA9=1 # See https://github.com/explosion/spaCy/issues/1530 and 
  export THINC_BLAS=/opt/intel/mkl/lib/intel64/libmkl_rt.so

  source /opt/intel/mkl/bin/mklvars.sh intel64
  source /opt/intel/pkg_bin/compilervars.sh intel64

  python setup.py build
}

package() {
  cd $_pkgname
  python setup.py install --root=${pkgdir} --optimize=1
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python-thinc
}
