# Maintainer: Mamy Ratsimbazafy <mamy (dot) ratsimbazafy_pkgbuild [at] gadz (dot) org>

pkgname=python-spacy-git
_pkgname=spacy
pkgver=v2.1.0a5.r18.gf07b577f
pkgrel=1
pkgdesc='Industrial-strength Natural Language Processing (NLP) with Python and Cython'
arch=('any')
url='https://github.com/explosion/spaCy'
license=('MIT')
depends=('python-numpy' 'python-cymem' 'python-preshed' 'python-thinc' 'cython-blis'
          'python-murmurhash' 'python-srsly' 'python-plac' 'python-jsonschema'
          'python-requests' 'python-regex')
makedepends=('git' 'python-setuptools' 'cython')
conflicts=('python-spacy')
provides=('python-spacy')
source=('git+https://github.com/explosion/spacy#branch=develop')
md5sums=('SKIP' )

pkgver() {
  cd $_pkgname
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


build() {
  cd $_pkgname
  python setup.py build
}

package() {
  cd $_pkgname
  python setup.py install --root=${pkgdir} --optimize=1
  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python-spacy
}
